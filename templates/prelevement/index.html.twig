{% extends 'layout.html.twig' %}

{% block title %}Prelevement index{% endblock %}

{% block body_layout %}
    <h1>Prelevement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Montant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for prelevement in prelevements %}
            <tr>
                <td>{{ prelevement.id }}</td>
                <td>{{ prelevement.name }}</td>
                <td>{{ prelevement.montant }}</td>
                <td>
                    <a href="{{ path('prelevement_show', {'id': prelevement.id}) }}">show</a>
                    <a href="{{ path('prelevement_edit', {'id': prelevement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('prelevement_new') }}">Create new</a>
{% endblock %}