{% extends 'layout.html.twig' %}

{% block title %}Banque index{% endblock %}

{% block body_layout %}
    <h1>Banque index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for banque in banques %}
            <tr>
                <td>{{ banque.id }}</td>
                <td>{{ banque.name }}</td>
                <td>
                    <a href="{{ path('banque_show', {'id': banque.id}) }}">show</a>
                    <a href="{{ path('banque_edit', {'id': banque.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('banque_new') }}">Create new</a>
{% endblock %}