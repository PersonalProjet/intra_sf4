{% extends 'login/index.html.twig' %}

{% block form_user_title %}
    Création User
{% endblock %}

{% block form_user %}
    {{ form_start(form) }}
    <span class="bmd-form-group">
        <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">
                <i class="material-icons">face</i>
            </span>
            </div>
            {{ form_widget(form.firstname, { 'attr': {'class': 'form-control', 'placeholder' : 'Nom'} }) }}
        </div>
    </span>
    <span class="bmd-form-group">
        <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">
                <i class="material-icons">face</i>
            </span>
            </div>
            {{ form_widget(form.secondname, { 'attr': {'class': 'form-control', 'placeholder' : 'Prénom'} }) }}
        </div>
    </span>
    <span class="bmd-form-group">
        <div class="input-group">
        <div class="input-group-prepend">
            <span class="input-group-text">
                <i class="material-icons">face</i>
            </span>
            </div>
            {{ form_widget(form.username, { 'attr': {'class': 'form-control', 'placeholder' : 'Nom Utilisateur'} }) }}
        </div>
    </span>
    <span class="bmd-form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">lock_outline</i>
                </span>
            </div>
            {{ form_widget(form.password.first, { 'attr': {'class': 'form-control', 'placeholder' : 'Mot de passe'} }) }}
        </div>
    </span>
    <span class="bmd-form-group">
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">
                    <i class="material-icons">lock_outline</i>
                </span>
            </div>
            {{ form_widget(form.password.second, { 'attr': {'class': 'form-control', 'placeholder' : 'Confirmation mot de passe'} }) }}
        </div>
    </span>
</div>
<div class="card-footer justify-content-center">
    <button type="submit" class="btn btn-info btn-lg">Register!</button>
</div>
{{ form_end(form) }}

{% endblock %}
